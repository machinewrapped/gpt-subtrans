QWidget {
    font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

QSplitter::handle {
    background-color: teal;
}

QStatusBar {
    color: white;
}

QComboBox::drop-down {
    border: none;
    color: white;
}

QComboBox::drop-down QAbstractItemView {
    color: white
}

.MainWindow, QLabel, QDialog {
    background-color: #363636;
    color: white;
}

.MainToolbar, .ProjectToolbar {
    background-color: #808080;
    border: none;
}

.LogWindow {
    background-color: #121212;
    border: 1px solid #242424;
}

.ScenesView {
    background-color: #121212;
}

.TreeViewItemWidget {
    padding: 1;
    margin: 0;
    border-width: 2;
    border-style: solid;
    border-color: black;
    border-radius: 12;
    background-color: #121212;
}

QTreeView:item:selected {
    border: 2px solid #800000;
    font-weight: bold;
}

.WidgetHeader { 
    font-size: 12pt;
    background-color: blanchedalmond;
    padding: 4;
    padding-left: 10;
    color: black;
}

.WidgetHeader[all_translated=true] {
    background-color: blanchedalmond;
}

.WidgetHeader[all_translated=false] {
    background-color: burlywood;
}

.WidgetHeader[errors=true], .WidgetBody[errors=true] {
    color: red;
}

.WidgetSubheading {
    font-size: 11pt;
    padding: 3;
    padding-left: 10;
    background-color: #363636;
    color: lavenderblush;
}

.WidgetBody {
    font-size: 10pt;
    padding: 2;
    padding-left: 10;
    background-color: #242424;
    color: white;
}

.ContentView {
    background-color: black;
}

.SubtitleView {
    padding: 1px;
    background-color: #242424;
}

.SubtitleView::item:selected {
    border: 1px solid aliceblue;
}

.LineItemView {
    padding: 0px;
    margin: 1px;
    background-color: #363636;
}

.LineItemHeader {
    font-weight: bold;
    font-size: 10pt;
    margin: 0px;
}

.LineItemBody {
    font-size: 10pt;
    margin: 0px;
}

.SelectionView {
    background-color: #363636;
}

.ProjectOptions {
    color: white;
    background-color: #121212;
}

QTabWidget::pane, QTabWidget::pane QWidget {
    padding: 3px;
}

QTabWidget::pane QFrame {
    background-color: #363636;
    border: 2px solid #121212;
}

QTabBar::tab {
	background-color: #262626;
	color: #ffffff;
	border-style: solid;
	border-width: 1px;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	border-color: lavenderblush;
	padding: 5px;
}

QTabBar::tab:selected {
    background-color: #555555;
    color: #ffffff;
}

